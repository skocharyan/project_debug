{
  "name": "easyvsl_creatix",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "lint:fix": "eslint  \"{src,apps,libs,test}/**/*.ts\" --ignore-path .eslintignore --fix",
    "prepare": "husky install",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "start:app:easyvsl-api": "APP_NAME='easyvsl_api' nest start --watch",
    "docker:up": "docker compose --project-directory ./docker -p easyvsl --env-file ./docker/.env-docker-compose up -d",
    "docker:down": "docker compose --project-directory ./docker -p easyvsl down",
    "migration:run": "yarn typeorm:cli migration:run",
    "typeorm:cli": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -f src/common/config/typeorm.config.ts",
    "migration:revert": "yarn typeorm:cli migration:revert",
    "migration:generate": "yarn typeorm:cli migration:generate -d src/orm/migrations -n",
    "migration:create": "yarn typeorm:cli migration:create -n",
    "migration:drop": "yarn typeorm:cli schema:drop"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^1.8.1",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/typeorm": "^9.0.1",
    "ajv": "^8.12.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cls-hooked": "^4.2.2",
    "lodash": "^4.17.21",
    "nconf": "^0.12.0",
    "nconf-yaml": "^1.0.2",
    "nodemailer": "^6.9.1",
    "pg": "^8.9.0",
    "pino": "^8.10.0",
    "pino-pretty": "^9.2.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "ts-jenum": "^2.2.2",
    "typeorm": "~0.2.45",
    "typeorm-naming-strategies": "^4.1.0",
    "typescript-eslint": "^0.0.1-alpha.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@nestjs/swagger": "~6.0.4",
    "@types/express": "^4.17.13",
    "@types/jest": "29.2.4",
    "@types/node": "18.11.18",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "bcryptjs": "^2.4.3",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": "^8.0.0",
    "jest": "29.3.1",
    "lint-staged": "^13.1.1",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.1.1",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.(ts)": [
      "yarn lint:fix",
      "yarn format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint-staged"
    }
  }
}
